{% extends 'Reportes/reporte_resultados.html.twig' %}
{% block body %}
<div class="header">
    <table>
        <tr>
            <td>
                <img src="{{ asset('build/images/logo-lab-MB.093a0228.png') }}" alt="">
            </td>
            <td>
               <strong>N° DE INSCRIPCION 742</strong>       <br>
                1ra calle oriente y 22 avenida norte #1-9   <br>
                Colonia Angélica, Sonsonate                 <br>
                Telefono: 2451 9607 - WhatsApp: 7625 8233   <br>
            </td>
        </tr>
        
    </table>
    <hr>
    <table>
        <tr class="datosP">
            {# <td style="width: 20%; padding-left: 60px; text-align: center;">
                <strong>{{ arrays[0].nombre_examen | upper }}</strong>
            </td> #}
            <td style="width: 30%; text-align: center;">
                <strong style="margin-left: 20px;">Paciente:</strong>
                {{ datos_head[0].nombre }} {{ datos_head[0].apellido }}
            </td>
            <td style="width: 20%; text-align: center;">
                <strong>Edad:</strong>
                
                {% if datos_head[0].edad_dias < 30 %}
                    {{ datos_head[0].edad_dias }} dias
                {% elseif datos_head[0].edad_meses < 12 %}
                    {{ datos_head[0].edad_meses }} meses
                {% else %}
                    {{ datos_head[0].edad_anios }} años
                {% endif %}
            </td>
            <td style="width: 30%; text-align: center; padding-right: 30px;">
                <strong>Fecha:</strong>
                {{ datos_head[0].fecha_orden|date("d-m-Y H:i") }}
            </td>
        </tr>
    </table>
    <hr>
</div>
{% endblock body %}



