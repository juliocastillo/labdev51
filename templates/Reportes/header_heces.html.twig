{% extends 'Reportes/reporte_heces.html.twig' %}
{% block body %}
<div class="header">
    <table>
        <tr>
            <td>
                <img src="{{ asset('build/images/logo-lab-MB.093a0228.png') }}" alt="">
            </td>
            <td class="dataHead">
               <strong>N° DE INSCRIPCION 742</strong> <br>
                1ra calle oriente y 22 avenida norte #1-9 <br>
                Telefono: 2451 9607 <br>
                WhatsApp: 7625 8233 <br>
            </td>
        </tr>
    </table>
    <hr>
    <table>
        <tr class="datosP">
            <td style="width: 40%;" class="dataHeadExam">
                <strong style="margin-left: 0px;">Paciente:</strong>
                {{ datos_head[0].nombre }} {{ datos_head[0].apellido }}
            </td>
        </tr>
        <tr class="datosP">
            <td style="width: 20%;" class="dataHeadExam">
                <strong>Edad:</strong>
                
                {% if datos_head[0].edad_dias < 30 %}
                    {{ datos_head[0].edad_dias }} dias
                {% elseif datos_head[0].edad_meses < 12 %}
                    {{ datos_head[0].edad_meses }} meses
                {% else %}
                    {{ datos_head[0].edad_anios }} años
                {% endif %}
            </td>
            <td style="width: 40%; text-align:right;" class="dataHeadExam">
                <strong>Fecha:</strong>
                {{ datos_head[0].fecha_orden|date("d-m-Y H:i") }}
            </td>
        </tr>
    </table>
    <hr>
</div>
{% endblock body %}



