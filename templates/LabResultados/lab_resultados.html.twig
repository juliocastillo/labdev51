{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            //buscar las ordenes de trabajo con estado pendiente de resultado.
            $('#btnBuscar').on('click', function () {
                numeroOrden = $("#numeroOrden").val()
                //$('#ordenes').waitMe({ text: 'Buscando...' });
                $.ajax({
                url: "{{ path('lab_resultados_ordenes_pendientes') }}",
                data : {numeroOrden : numeroOrden},
                type: "GET",
                dataType: "html",
                success : function (html) {
                    //console.log(html);
                    $("#ordenes").html(html);
                }
                //}).done(function(data) {
                    //$("#ordenes").html("Resultados");
                });
            });
        })
    </script>

{% endblock %}
