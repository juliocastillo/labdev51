<div class="table table-responsive">
    <table id="listarOrdenes" class="table table-striped table-condensed">
        <thead class="bg-success">
            <tr>
                <th class="text-center">Muestra #</th>
                <th class="text-center">Fecha Orden</th>
                <th class="text-center">Paciente</th>
                <th class="text-center">Accion</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {% if datos is empty %}
                <tr>
                    <td colspan="4"><p>No hay ninguna solicitud pendiente relacionada con este numero...</p></td>
                </tr>                
            {% else %}
                {% for dato in datos %}
                    <tr>
                        <td style="width: 25%;"><div class="btn btn-success btn-block" id="idsolicitud" onclick="mostrarDetalle({{ dato.id }})">{{ dato.id }}</div></td>
                        <td style="width: 25%;">{{ dato.fecha_orden | date("d-m-Y H:i:s") }}</td>
                        <td style="width: 25%;">{{ dato.nombre }} {{ dato.apellido }}</td>
                        <td style="width: 25%;"><button id="btnCancelar" class="btn btn-warning">Cancelar Orden</button></td>
                        {# {% echo (new \DateTime())->format('d/m/Y H:i:s') %} #}
                    </tr>
                {% endfor %}
            {% endif %}
            
        </tbody>
    </table>
</div>