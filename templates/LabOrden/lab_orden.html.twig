
{% extends '@SonataAdmin/CRUD/action.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {# encore_entry_link_tags('role_edit') #}
{% endblock stylesheets %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        function guardarExamen(idOrden) {
                idExamen      = $("#idexamen").val();
                idTipoMuestra = $("#idtipomuestra").val();
                precio        = $("#precio").val();
                $.ajax({
                    //Tipo de peticion: GET o POST
                    type: "POST",
                    //la URL para la peticion
                    url: "{{ path('lab_detalles_guardar_examenes') }}",
                    //La informacion a enviar
                    //tambien es posible utilizar una cadena de datps
                    data: {idOrden:idOrden, idExamen:idExamen, idTipoMuestra : idTipoMuestra, precio:precio},
                    //El tipo de informacion que se espera de respuesta
                    dataType: "html",
                    //Codigo a ejecutar si la peticion es satisfactoria
                    //La resá¹•uesta es pasada como argumento a la funcion
                    success: function (text) {
                        $("#ordenExamenes").html(text);
                    }
                })
        }
    </script>
{% endblock javascripts %}
{% block content %}
    {{ action }}
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="box box-primary">
            <div class="box-body">
                <h3 class="text-primary"><strong><i class="fa fa-search" style="color:lightseagreen;"></i>  Ordenes Laboratorio</strong></h3>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="sonata-ba-field sonata-ba-field-standard-natual">
                            <form method="get" name="datos" id="datos" action="">
                                <input type="hidden" name="action" value="{{ action }}">
                                <input type="hidden" name="idorden" value="{{ idorden }}">
                                    <table class="table table-responsive">
                                        <tr>
                                            <td class="bg-primary text-right"><label for="idPaciente">Paciente</label></td>
                                            <td>
                                                <select class="form-control" id="idPaciente" name="idPaciente">
                                                    {% for paciente in pacientes %}
                                                        <option value="{{paciente.id}}">{{paciente.nombre}}{{paciente.apellido}}</option>
                                                    {% endfor %}
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="bg-primary text-right"><label for="idMedico">Medico</label></td>
                                            <td>
                                                <select class="form-control" id="idMedico" name="idMedico">
                                                    {% for medico in medicos %}
                                                        <option value="{{medico.id}}">{{medico.nombre}}{{medico.apellido}}</option>
                                                    {% endfor %}
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="bg-primary text-right"><label for="idTipodocumento">Tipo Documento</label></td>
                                            <td>
                                                <select class="form-control" id="idTipodocumento" name="idTipodocumento">
                                                    {% for tipodocumento in tiposdocumento %}
                                                        <option value="{{tipodocumento.id}}">{{tipodocumento.nombre}}</option>
                                                    {% endfor %}
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="bg-primary text-right" style="width:25%"><label for="idTipoDocumento">Numero de Documento</label></td>
                                            <td><input class="form-control" required type="text" id="idTipoDocumento"></td>
                                        </tr>
                                        <tr>
                                            <td class="bg-primary text-right"><label for="idFormaPago">Forma de Pago</label></td>
                                            <td>
                                                <select class="form-control" id="idFormapago" name="idFormapago">
                                                    {% for formapago in formaspago %}
                                                        <option value="{{formapago.id}}">{{formapago.nombre}}</option>
                                                    {% endfor %}
                                                </select>
                                            </td>                                </tr>
                                            {# {% endif %}
                                            {% endfor %} #}
                                    </table>
                                    <button type="submit" id="btnGuardar" style="width: 200px; margin-top: 5px;" class="btn btn-info">Guardar</button>
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="table-responsive">
                                                    <table id="detalleOrden" class="table table-striped">
                                                        <thead class="text-center">
                                                            <tr>
                                                                <th>Examen</th>
                                                                <th>Muestra</th>
                                                                <th>Precio($)</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td>
                                                                    <select class="form-control" id="idexamen" name="idexamen">
                                                                        <option value=""></option>
                                                                        {% for examen in examenes %}
                                                                            <option value="{{examen.id}}">{{examen.nombre_examen}}</option>
                                                                        {% endfor %}
                                                                    </select>
                                                                </td>
                                                                <td>
                                                                    <select class="form-control" id="idtipomuestra" name="idtipomuestra">
                                                                        <option value=""></option>
                                                                        {% for tipomuestra in tiposmuestra %}
                                                                            <option value="{{tipomuestra.id}}">{{tipomuestra.tipo_muestra}}</option>
                                                                        {% endfor %}
                                                                    </select>
                                                                </td>
                                                                <td>
                                                                    <input type="text" id="precio" name="precio"> 
                                                                </td>
                                                                <td>
                                                                    <button type="button" onclick="guardarExamen({{ idorden }})" class="btn btn-primary">Agregar examen</button>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>              
                            </form> 
                        </div>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>

<div id="ordenExamenes">
{% for detalle in detalles %}
    + {{detalle.nombre_examen}} <br>
{% endfor %}
</div>

{% endblock %}