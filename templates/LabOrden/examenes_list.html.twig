<div class="modal fade" id="ordersDetails" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: DodgerBlue; color: WhiteSmoke; font-weight: bold;">
                <button class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="titleM">Lista de Examenes</h4>
            </div>
                <div class="modal-body">
                    <table id="listarExamenesOrden" class="table table-striped table-condensed">
                        <thead class="">
                            <tr>
                                <th class="text-center">N&deg; Orden</th>
                                <th class="text-center">Examen</th>
                                <th class="text-center">Estado</th>
                                <th style="padding-left: 40px;">Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for dato in datos %}
                                <tr>
                                    <td class="text-center">{{ dato.id }}</td>
                                    <td class="text-center">{{ dato.nombre_examen }}</td>
                                    <td class="text-center">{{ dato.estado_examen }}</td>
                                    <td class="text-center">
                                        {% if dato.id_examen == 6%}
                                            <a id="btnImprimirExamenHeces" href="#" class="btn btn-primary"><i class="glyphicon glyphicon-print"></i></a>
                                        {% elseif dato.id_examen == 16%}
                                            <a id="btnImprimirExamenOrina" href="#" class="btn btn-primary"><i class="glyphicon glyphicon-print"></i></a>
                                        {% elseif dato.id_examen == 4%}
                                            <a id="btnImprimirHemograma" href="#" class="btn btn-primary"><i class="glyphicon glyphicon-print"></i></a>
                                        {% elseif dato.id_examen == 94%}
                                            <a id="btnImprimirEspermograma" href="#" class="btn btn-primary"><i class="glyphicon glyphicon-print"></i></a>    
                                        {% elseif dato.id_examen == 78%}
                                            <a id="btnImprimirLeucograma" href="#" class="btn btn-primary"><i class="glyphicon glyphicon-print"></i></a>
                                        {% else %}
                                            <a id="btnImprimirOrden" href="#" class="btn btn-primary"><i class="glyphicon glyphicon-print"></i></a>
                                        {% endif %}
                                    </td>
                                    <td style="display: none;">{{ dato.id_examen }}</td>
                                    <td style="display: none;">{{ dato.id_detalle_orden }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {# <form action="" id="formPerson">
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-dark" id="btnSave">Save</button>
                </div>
            </form> #}
        </div>
    </div>
</div>